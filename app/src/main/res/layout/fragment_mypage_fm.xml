<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/memberModifyPageCon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backColor"
    tools:context=".mypage_fm">

    <Button
        android:id="@+id/memberModifyPageMainBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#FFFFFF"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/memberModifyPageTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="회원 정보 수정"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/memberModifyPageMainBack"
        app:layout_constraintTop_toTopOf="@+id/memberModifyPageMainBack" />

    <TextView
        android:id="@+id/memberModifyPageEmailTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="이메일 수정"
        app:layout_constraintStart_toStartOf="@+id/memberModifyPageMainBack"
        app:layout_constraintTop_toBottomOf="@+id/memberModifyPageTv" />

    <EditText
        android:id="@+id/memberModifyPageEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/memberModifyPageMainBack"
        app:layout_constraintStart_toStartOf="@+id/memberModifyPageMainBack"
        app:layout_constraintTop_toBottomOf="@+id/memberModifyPageEmailTv" />

    <TextView
        android:id="@+id/memberModifyPageNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="이름 수정"
        app:layout_constraintStart_toStartOf="@+id/memberModifyPageMainBack"
        app:layout_constraintTop_toBottomOf="@+id/memberModifyPageEmail" />

    <EditText
        android:id="@+id/memberModifyPageName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/memberModifyPageMainBack"
        app:layout_constraintStart_toStartOf="@+id/memberModifyPageMainBack"
        app:layout_constraintTop_toBottomOf="@+id/memberModifyPageNameTv" />

    <TextView
        android:id="@+id/memberModifyPagePwTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="비밀번호 수정"
        app:layout_constraintStart_toStartOf="@+id/memberModifyPageMainBack"
        app:layout_constraintTop_toBottomOf="@+id/memberModifyPageName" />

    <EditText
        android:id="@+id/memberModifyPagePw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/memberModifyPageMainBack"
        app:layout_constraintStart_toStartOf="@+id/memberModifyPageMainBack"
        app:layout_constraintTop_toBottomOf="@+id/memberModifyPagePwTv" />

    <TextView
        android:id="@+id/memberModifyPageTelTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="전화번호 수정"
        app:layout_constraintStart_toStartOf="@+id/memberModifyPageMainBack"
        app:layout_constraintTop_toBottomOf="@+id/memberModifyPagePw" />

    <EditText
        android:id="@+id/memberModifyPageTel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="phone"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/memberModifyPageMainBack"
        app:layout_constraintStart_toStartOf="@+id/memberModifyPageMainBack"
        app:layout_constraintTop_toBottomOf="@+id/memberModifyPageTelTv" />

    <Button
        android:id="@+id/memberModifyPageModifyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/mainColor"
        android:text="수정"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="@+id/memberModifyPageTel"
        app:layout_constraintTop_toBottomOf="@+id/memberModifyPageTel" />

    <Button
        android:id="@+id/memberModifyPageCancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/mainColor"
        android:gravity="center"
        android:text="취소"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/memberModifyPageTel"
        app:layout_constraintTop_toBottomOf="@+id/memberModifyPageTel" />

</androidx.constraintlayout.widget.ConstraintLayout>